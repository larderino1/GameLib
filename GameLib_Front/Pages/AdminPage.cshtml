@page
@model GameLib_Front.Pages.AdminPageModel
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>AdminPage</h1>
<div>
    <form method="get">
        <table class="table">
            <thead>
                <tr>
                    <th>User login</th>
                    <th>User email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => user.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => user.User.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => user.Role)
                    </td>
                    <td>
                        <a asp-page="./DeleteUser" asp-route-name="@user.User.UserName">Delete</a>
                        <a asp-page="./ChangeUserRole" asp-route-name="@user.User.UserName" asp-route-role="@user.Role">Change role</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </form>
</div>
