@page
@model GameLib_Front.Pages.GameDeleteModel
@{
    ViewData["Title"] = "Delete Game";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this game ?</h2>
<div>
    <h4>Game Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dd class="col-sm-10">
            <img class="img-thumbnail" src="@Model.Game.PhotoUrl" width="100" height="100" />
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Games">Back to List</a>
    </form>
</div>