@page
@model GameLib_Front.Pages.GameDetailsModel
@{
    ViewData["Title"] = "Game Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Game details</h1>

<div>
    <h4>Product Information</h4>
    <div>
        <img class="img-thumbnail" src="@Model.Game.PhotoUrl" height="250" width="150" />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Studio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Studio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.AnonceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.AnonceDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Mode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Mode.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Platform)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Platform.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Studio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Studio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Category.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole(RoleConstants.AdminRole))
    {
        <a asp-page="./GameEdit" asp-route-id="@Model.Game.Id">Edit</a>
    }
    | <a asp-page="./Games">Back to List</a>
</div>