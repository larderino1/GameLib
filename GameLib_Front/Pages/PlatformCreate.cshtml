@page
@model GameLib_Front.Pages.PlatformCreateModel
@{
    ViewData["Title"] = "Create Platform";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create Platform</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Platform.Name" class="control-label"></label>
                <input asp-for="Platform.Name" class="form-control" />
                <span asp-validation-for="Platform.Name" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Platforms">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
